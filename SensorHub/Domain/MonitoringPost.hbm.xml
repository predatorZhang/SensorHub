<?xml version="1.0"  encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Domain" namespace="Domain">
  <class name="Domain.DeviceType, Domain" table="DEVICETYPE">
    <id name="dbID" column="DBID" type="int" unsaved-value="0">
      <generator class="native" />
    </id>
    <property name="postName" column="POSTNAME" type="string" />

    <many-to-one name="region" column="REGION_ID"/>
    
    <bag name="devices">
      <key column="POST_ID" />
      <one-to-many class="Device"/>
    </bag>
    
  </class>
</hibernate-mapping>