<?xml version="1.0"  encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Domain" namespace="Domain">
  <class name="Domain.DeviceType, Domain" table="DEVICETYPE">
    <id name="dbID" column="DBID" type="int" unsaved-value="0">
      <generator class="native" />
    </id>
   
    <property name="deviceName" column="deviceName" type="int" />
    <property name="isAvailbale" column="isAvailbale" type="boolean"  />

    <bag name="devices">
      <key column="DeviceType_ID" />
      <one-to-many class="Device"/>
    </bag>
    
  </class>
</hibernate-mapping>