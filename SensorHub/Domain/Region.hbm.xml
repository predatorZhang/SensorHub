<?xml version="1.0"  encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Domain" namespace="Domain">
  <class name="Domain.DeviceType, Domain" table="DEVICETYPE">
    <id name="dbID" column="DBID" type="int" unsaved-value="0">
      <generator class="native" />
    </id>
    <property name="regionName" column="REGIONNAME" type="string" />
    <many-to-one name="parent" column="PARENT_ID"/>
    
    <bag name="devices">
      <key column="REGION_ID" />
      <one-to-many class="Device"/>
    </bag>

    <bag name="posts">
      <key column="REGION_ID" />
      <one-to-many class="MonitoringPost"/>
    </bag>

    <bag name="alarmInfos">
      <key column="REGION_ID" />
      <one-to-many class="AlarmInfo"/>
    </bag>

    <bag name="children">
      <key column="PARENT_ID" />
      <one-to-many class="Region" />
    </bag>
  </class>
</hibernate-mapping>