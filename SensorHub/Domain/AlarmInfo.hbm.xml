<?xml version="1.0"  encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Domain" namespace="Domain">
  <class name="Domain.AlarmInfo, Domain" table="ALARMINFO">
    <id name="dbID" column="DBID" type="int" unsaved-value="0">
      <generator class="native" />
    </id>
   
    <property name="alarmContent" column="ALARMCONTENT" type="string" />
    <property name="currentState" column="CURRENTSTATE" type="string"  />
    <property name="alarmDate" column="ALARMDATE" type="DateTime"  />

    <many-to-one name="region"  column="REGION_ID"/>
    <many-to-one name="device" column="DEVICE_ID"/>
    <many-to-one name="device" column="DEVICE_ID"/>
    
  </class>
</hibernate-mapping>