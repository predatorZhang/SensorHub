<?xml version="1.0"  encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Domain" namespace="Domain">
  <class name="Domain.AlarmHandler, Domain" table="ALARMHANDLER">
    <id name="dbID" column="DBID" type="int" unsaved-value="0">
      <generator class="native" />
    </id>
    <property name="alarmHandlerName" column="ALARMHANDLERNAME" type="string" />
    <property name="phoneNumber" column="PHONENUMBER" type="string"  />

    <bag name="devices">
      <key column="AlarmHandler_ID" inverse="true"/>
      <one-to-many class="Device"/>
    </bag>

    <bag name="alarmInfos">
      <key column="AlarmHandler_ID" inverse="true"/>
      <one-to-many class="AlarmInfo"/>
    </bag>
    
  </class>
</hibernate-mapping>